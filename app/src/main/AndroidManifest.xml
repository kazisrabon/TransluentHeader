<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bs_36.transluentheader">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/Theme.TranslucentActionBar">

        <activity
            android:name=".HomeActivity"
            android:theme="@style/Theme.TranslucentActionBar.ActionBar.Overlay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MusicFragment"
            android:theme="@style/Theme.TranslucentActionBar.ActionBar.Overlay"/>
        <activity android:name=".GraphFragment"
            android:theme="@style/Theme.TranslucentActionBar.ActionBar.Overlay"/>
        <activity android:name=".BarChartActivity"
            android:theme="@style/Theme.TranslucentActionBar.ActionBar.Overlay"/>
    </application>

</manifest>
